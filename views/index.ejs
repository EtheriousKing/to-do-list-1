<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do-App</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <section id="header">
        <%- include('partials/header.ejs') %>
    </section>
    <section id="inputs">
        <form action="/addTask" method="POST">
            <label for="taskEnter">Enter a Task: </label>
            <input type="text" id="taskInput" placeholder="task" name="task">
            <label for="priority">Select Task Priority</label>
            <select name="priority" id="priority">
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
            </select>
            <input type="submit" value="Add Task" id="addButton">
        </form>
        <% if (locals.numberOfItems >= 1) { %>
            <section id="pendingTaskList">
                <h2>Pending Tasks</h2>
                <ul id="pendingTasks">
                    <form  method="POST">
                        <% taskList.forEach(element => { %>
                            <li>
                                <input type="checkbox" name="check" id="listToggle">
                                <%= element.task %>
                                <button formaction="/removeTask" id="removeButton" name="task" value="<%= element.task %>">Delete</button>
                            </li>
                        <% }) %> 
                    </form>
                </ul>
            </section>
        <% } else { %>
            <h2>No Pending Tasks</h2>
        <% } %>
        <section id="completedTaskList">
            <% if (locals.completedNumberOfItems >= 1) { %>
             <h2>Completed Tasks</h2>
             <ul id="completedTasks">
                <form  method="POST">
                    <% finishedTaskList.forEach(element => { %>
                        <li>
                            <input type="checkbox" name="check" id="listToggle">
                            <%= element.task %>
                            <button formaction="/removeTask" id="removeButton" name="task" value="<%= element.task %>">Delete</button>
                        </li>
                    <% }) %> 
                </form>
             </ul>
            <% } %>
        </section>
    </section>
    <section id="footer">
        <%- include('partials/footer.ejs') %>
    </section>
    <script src="./javascripts/main.js"></script>
</body>
</html>